# Use Python 3.11 slim image for smaller footprint
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY autoindexer_service.py .
COPY rag_client.py .
COPY data_sources.py .

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash autoindexer
RUN chown -R autoindexer:autoindexer /app
USER autoindexer

# Set Python path
ENV PYTHONPATH=/app

# Make the service executable
RUN chmod +x autoindexer_service.py

# Default command
CMD ["python", "autoindexer_service.py"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"
